<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- TextView for graph title -->
    <TextView
        android:id="@+id/tv_graph_title"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="A graph showing your Stress Levels" />

    <!-- LineChart for stress level graph -->
    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/lineChart"
        android:layout_width="match_parent"
        android:layout_height="200dp" />


    <!-- TextView for summary title -->
    <TextView
        android:id="@+id/tv_summary_title"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="Summary of Results" />

    <!-- RelativeLayout for the table headers -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">

        <!-- TextView for Time column header -->
        <TextView
            android:id="@+id/tv_time_header"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:paddingStart="10dp"
            android:text="Time" />

        <!-- TextView for Stress column header -->
        <TextView
            android:id="@+id/tv_stress_header"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:paddingEnd="10dp"
            android:text="Stress" />
    </RelativeLayout>

    <!-- ScrollView to contain the table with stress data -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- TableLayout to display the stress data -->
        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
            android:layout_marginBottom="10dp">

            <!-- Dynamic rows will be added here programmatically -->

        </TableLayout>
    </ScrollView>

</LinearLayout>
